<%= simple_form_for(@ressource, html: { multipart: true }) do |ressource| %>

<!-- as: :select pour choix défilant
as: :check_boxes pour multiple choix -->

  <%= ressource.input :title, label: "Titre", placeholder: 'Moonbar : Le meilleur agenda des événements pour entreprendre à Paris' %>
  <%= ressource.input :content, label: "Description", as: :text, placeholder: 'Moonbar liste sur son site et sa newsletter hebdomadaire l’ensemble des évènements startup etc.' %>

  <%= ressource.input :site, label: "Site Web", placeholder: 'http://moonbar.org/' %>
  <%= ressource.input :address, label: "Coordonnées", placeholder: 'Fondateur: Julien Picaud - contact@moonbar.org' %>

  <%= ressource.association :categories,
                     as: :check_boxes,
                     label_method: :name,
                     value_method: :id,
                     label: 'Catégories' %>

  <%= ressource.association :sub_categories,
                     as: :check_boxes,
                     label_method: :name,
                     value_method: :id,
                     label: 'Sous-Catégories' %>

  <%= ressource.label :picture, label: "Photo" %>
  <%= ressource.file_field :picture %>

  <%= ressource.submit(class: "btn btn-info", value: "Valider") %>
<% end %>